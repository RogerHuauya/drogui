#include <stdlib.h>
#include <stdio.h>
#include <ncurses.h>
 
 
int main(void) {
 	initscr();
	cbreak();
	noecho();
	
	if(!has_colors()){
		printw("Terminal does'nt support colors");
		getch();
		return -1;
	}	
	start_color();

	init_pair(1, COLOR_GREEN, COLOR_BLACK);

	int height = 20, width = 20, start_x = 10, start_y = 10;

	WINDOW * mainwin = newwin(height, width, start_y, start_x);
	refresh();

	box(mainwin, 0, 0);
	wattron(mainwin, COLOR_PAIR(1));
	mvwprintw(mainwin, 1, 1, "hello");
	wattroff(mainwin, COLOR_PAIR(1));
	wrefresh(mainwin);


	getch();
	endwin();
	return 0;

}
